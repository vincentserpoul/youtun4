{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MP3YouTube",
  "version": "0.1.0",
  "identifier": "com.mp3youtube.app",
  "build": {
    "beforeDevCommand": "trunk serve",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "trunk build --release",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "MP3YouTube",
        "width": 1024,
        "height": 768,
        "minWidth": 400,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "targets": "all",
    "iOS": {
      "developmentTeam": ""
    },
    "android": {
      "minSdkVersion": 24
    }
  }
}
